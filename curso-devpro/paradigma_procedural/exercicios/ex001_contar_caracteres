def conta_caracteres(string):
    """
    Essa função conta os caracteres de uma string
    Exemplo:

    :param string: string a ser contada

    >>> conta_caracteres('Danilo')
    a: 1
    d: 1 
    i: 1
    l: 1
    n: 1
    o: 1
    >>> conta_caracteres('chocolate')
    a: 1
    c: 2
    e: 1
    h: 1
    l: 1
    o: 2
    t: 1
    """
    # MANEIRA 1
    # caracteres = sorted(string.lower())

    # letras_contadas = []
    # for letra in caracteres:
    #     letra_atual = letra
    #     if letra_atual not in letras_contadas:
    #         print(f'{letra}: {caracteres.count(letra)}')
    #         letras_contadas.append(letra)

    # Forma de fazer a mesma função, só de de forma mais avançada
    resultado = {}
    for caracter in string.upper():
        resultado[caracter] = resultado.get(caracter, 0) + 1

    return resultado


if __name__ == '__main__':
    print(conta_caracteres('Danilo'))
    print()
    print(conta_caracteres('chocolate'))
